<Page x:Class="SocialNetwork.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialNetwork"
      mc:Ignorable="d" d:DesignWidth="300"
      Title="Login" Height="700">

    <Grid HorizontalAlignment="Center" Margin="0" Width="145">
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="145" Margin="0,95,-25,0" FontStyle="Italic"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,145,-25,0" Height="25" Width="145" MaxLength="20"/>
        <Button x:Name="loginButton" Content="Log In" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="70,195,0,0" Click="login"/>
        <Button x:Name="loadButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="0,195,0,0" Click="loadLogin"/>
        <TextBox x:Name="statusLabel" HorizontalAlignment="Left" Height="288" Margin="-57,247,-47,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="249"/>


    </Grid>
</Page>
