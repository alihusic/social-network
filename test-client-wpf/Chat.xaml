<Page x:Class="SocialNetwork.Chat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialNetwork"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Chat">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="chatId" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="enter id" VerticalAlignment="Top" Width="120" FontStyle="Italic"/>
        <Button x:Name="loadButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="225,0,0,0" Click="loadChat"/>
        <TextBox x:Name="messageContent" HorizontalAlignment="Left" Height="123" TextWrapping="Wrap" Text="Enter message" VerticalAlignment="Top" Width="300" Margin="0,47,0,0" FontStyle="Italic"/>
        <Button x:Name="sendButton" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="225,183,0,0" Click="sendMessage"/>

    </Grid>
</Page>
