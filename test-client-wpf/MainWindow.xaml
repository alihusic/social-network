<Window x:Class="SocialNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialNetwork"
        Closing="Window_Closing"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button Content="Login" MinWidth="50" Margin="10,0,0,0" Click="openLogin"></Button>
            <Button Content="Signup" MinWidth="50" Margin="5,0,0,0" Click="openSignup"></Button>
            <Button Content="Chat" MinWidth="50" Margin="5,0,0,0" Click="openChat"></Button>
            <Button Content="CheckNewMessages" MinWidth="50" Margin="5,0,0,0" Click="openCheckNewMessages"></Button>
            <Button Content="Newsfeed" MinWidth="50" Margin="5,0,0,0" Click="openNewsfeed"></Button>
            <Button Content="ViewPost" MinWidth="50" Margin="5,0,0,0" Click="openViewPost"></Button>
            <Button Content="CreatePost" MinWidth="50" Margin="5,0,0,0" Click="openCreatePost"></Button>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
