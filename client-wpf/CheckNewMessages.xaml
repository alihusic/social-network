<Page x:Class="SocialNetwork.CheckNewMessages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialNetwork"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CheckNewMessages">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="newMessageContent" HorizontalAlignment="Left" Height="108" TextWrapping="Wrap" Text="Content" VerticalAlignment="Top" Width="300" Margin="-150,-108,-150,0"/>
        <Button x:Name="load" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="51" Margin="99,15,-144,-15"/>

    </Grid>
</Page>
