<Page x:Class="SocialNetwork.Newsfeed"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SocialNetwork"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Newsfeed">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="newsfeedContent" HorizontalAlignment="Left" Height="250" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="loadNewsfeedButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="225,278,0,0" Click="loadNewsfeed"/>

    </Grid>
</Page>
